{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "mill-ng": {
      "root": "",
      "projectType": "library",
      "sourceRoot": "src",
      "prefix": "mill",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "sconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "storybook-stub": {
      "root": "",
      "projectType": "application",
      "sourceRoot": "src",
      "architect": {
        "build": {
          "builder": "This is stub only for setting global style and assets for Storybook",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "ng-package.json",
            "scripts": [],
            "styles": [
              "src/assets/styles/_styles.scss"
            ],
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/"
              }
            ],
            "outputPath": "dist"
          }
        }
      }
    }
  },
  "defaultProject": "storybook-stub"
}
