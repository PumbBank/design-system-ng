{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "mill-ng": {
      "root": "",
      "projectType": "library",
      "sourceRoot": "src",
      "prefix": "mill",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "storybook-stub": {
      "root": "",
      "projectType": "application",
      "sourceRoot": "src",
      "architect": {
        "build": {
          "builder": "This is stub only for setting global style and assets for Storybook",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "ng-package.json",
            "scripts": [],
            "styles": [
              "src/assets/styles/_styles.scss",
              "node_modules/@mill/figma/gilroy/gilroy.css"
            ],
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/"
              },
              { "glob": "CHANGELOG.md", "input": ".", "output": "/" },
              { "glob": "CHANGELOG_NG7.md", "input": ".", "output": "/" },
              { "glob": "CHANGELOG_NG8.md", "input": ".", "output": "/" },
              { "glob": "CHANGELOG_NG9.md", "input": ".", "output": "/" },
              { "glob": "CHANGELOG_NG10.md", "input": ".", "output": "/" }
            ],
            "outputPath": "dist"
          }
        }
      }
    },
    "mill-lib": {
      "projectType": "library",
      "root": "mill-lib",
      "sourceRoot": "mill-lib/src",
      "prefix": "mill",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "mill-lib/tsconfig.lib.json",
            "project": "mill-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "mill-lib/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "mill-lib/src/test.ts",
            "tsConfig": "mill-lib/tsconfig.spec.json",
            "karmaConfig": "mill-lib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "mill-lib/tsconfig.lib.json",
              "mill-lib/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "storybook-stub",
  "cli": {
    "analytics": false
  }
}
